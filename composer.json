{
  "name": "tzachi/phalcon-repository",
  "type": "library",
  "description": "A library for implementing the repository pattern in projects using the Phalcon PHP Framework",
  "keywords": [
    "phalcon",
    "repository",
    "repo"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Tim√≥teo Zachi",
      "email": "zachi.timo@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-phalcon": "^3.4.3"
  },
  "require-dev": {
    "ext-pdo": "*",
    "fzaninotto/faker": "^1.8",
    "phalcon/ide-stubs": "^3.4.3",
    "phpstan/phpstan": "^0.11.2",
    "phpstan/phpstan-deprecation-rules": "^0.11.0",
    "phpstan/phpstan-phpunit": "^0.11.0",
    "phpstan/phpstan-strict-rules": "^0.11.0",
    "phpunit/phpunit": "^8.0",
    "roave/security-advisories": "dev-master",
    "tzachi/coding-standard": "^0.1.0"
  },
  "autoload": {
    "psr-4": {
      "TZachi\\PhalconRepository\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TZachi\\PhalconRepository\\Tests\\Unit\\": "tests/unit",
      "TZachi\\PhalconRepository\\Tests\\Functional\\": "tests/functional",
      "TZachi\\PhalconRepository\\Tests\\Mock\\": "tests/mock"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
